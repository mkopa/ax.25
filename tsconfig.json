{
    "compilerOptions": {
      "outDir": "./dist",
      "noImplicitAny": false,
      "module": "es6",
      "target": "es6",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "declaration": true,
      "sourceMap": true,
      "esModuleInterop": true
    },
    "include": ["src/**/*", "example"    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ],
    "ts-node": {
      "esm": true 
    },
  }
